{
  "name": "jarvis-backend",
  "version": "1.0.0",
  "description": "Backend API for Claude Conversation Indexer",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "test": "vitest run --exclude 'src/test/integration/**'",
    "test:watch": "vitest --exclude 'src/test/integration/**'",
    "test:ui": "vitest --ui",
    "test:integration": "vitest run --no-file-parallelism src/test/integration",
    "test:integration:watch": "vitest --no-file-parallelism src/test/integration",
    "test:all": "vitest run",
    "test:db:up": "docker compose -f ../docker-compose.test.yml up -d --wait",
    "test:db:down": "docker compose -f ../docker-compose.test.yml down",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "claude",
    "conversation",
    "indexer",
    "semantic-search",
    "mcp"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/rate-limit": "^9.1.0",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "axios": "^1.13.2",
    "dotenv": "^16.4.1",
    "drizzle-orm": "^0.33.0",
    "fastify": "^4.26.0",
    "pg": "^8.11.3",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "postgres": "^3.4.7",
    "voyageai": "^0.0.8",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/node": "^20.11.16",
    "@types/pg": "^8.11.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.16.0",
    "prettier": "^3.2.5",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.17.0",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
